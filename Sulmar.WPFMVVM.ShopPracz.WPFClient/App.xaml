<Application x:Class="Sulmar.WPFMVVM.ShopPracz.WPFClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sulmar.WPFMVVM.ShopPracz.WPFClient"
             StartupUri="Views/ShellView.xaml">
    <Application.Resources>

        <ResourceDictionary>
            
            <local:ViewModelLocator x:Key="ViewModelLocator" />


            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="ViewModelView.xaml" />
                
                
                              
                <ResourceDictionary Source="Resources/ResourceDictionary.xaml" /> 
               
                <!-- Wciąganie pliku z zasobami Resources-->
                <ResourceDictionary Source="Resources/DataTemplates.xaml" />
                <!-- Wciąganie pliku z szablonami-->

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
