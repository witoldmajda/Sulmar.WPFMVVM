<Window x:Class="Sulmar.WPFMVVM.ShopPracz.WPFClient.Views.CanvasView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sulmar.WPFMVVM.ShopPracz.WPFClient.Views"
        mc:Ignorable="d"
        Title="CanvasView" Height="300" Width="300">
    <Grid>
        <Canvas>
            <Button Canvas.Left="100"
                    Canvas.Bottom="50"
                    >Save</Button>
            <Button>Open</Button>
            <Line X1="10" X2="20"
                  Y1="50" Y2="200"
                  Stroke="Red"
                  StrokeThickness="4"
                  Canvas.Left="60"
                  />
            <Rectangle Width="100"
                       Height="50"
                       Stroke="Blue"
                       StrokeThickness="3"
                       Canvas.Left="50"
                       Canvas.Top="50"
                       />
        </Canvas>
    </Grid>
</Window>
