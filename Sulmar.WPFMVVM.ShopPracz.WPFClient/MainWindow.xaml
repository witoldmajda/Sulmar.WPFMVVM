<Window x:Class="Sulmar.WPFMVVM.ShopPracz.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sulmar.WPFMVVM.ShopPracz.WPFClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Background="Red">Hello</Button>

        <Button Background="Blue" Width="300" Height="100" Content="Send" />

        <Button Background="Yellow" >
            <StackPanel Orientation="Horizontal">
                <Label Content="Tekst 1" />
                <Label Content="Tekst 2" />
                <Button>Send</Button>
            </StackPanel>
        </Button>
<!-- kom-->
        <Button Content="Hello 3">
            <Button.Background>
                <LinearGradientBrush
                    StartPoint="0,0"
                    EndPoint="1,1">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="Red" Offset="0.3" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>



    </StackPanel>
</Window>
